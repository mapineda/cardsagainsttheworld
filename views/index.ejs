<!DOCTYPE html>
<!-- PUT NG-APP AND NAME OF MODULE -->
<html lang="en" ng-app="CardsAgainstAssembly">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Cards Against Assembly™</title>
        <link rel="stylesheet" href="//cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/css/bootstrap.css">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
       <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
       <script src="/javascripts/app.js"></script>
       <script src="/javascripts/controllers/cardsController.js"></script>
       <script src="/javascripts/controllers/headerController.js"></script>
    </head>
    <body>
      <div class="container">
        <header class="navbar" ng-controller="headerController as headerCtrl">
          <h1 class="pull-left">{{ headerCtrl.title }}</h1>
        </header>

        <section id="cards" class="container-fluid" ng-controller='cardsController as cardCtrl';>
          <div class="row">

            <div class="col-sm-6 col-md-6 col-lg-4" ng-repeat="card in cardCtrl.cards">
              <div class="card">
                <h4 class="card-title">{{ card.question }}</h4>
                <h6>Cards Against Assembly</h6>
              </div>
            </div>

          </div>
        </section>

      <footer>
        <p>Made with <span class="heart">♥︎</span> at General Assembly</p>
      </footer>
<!-- MODULES -->

<!-- SERVICES -->

<!-- DIRECTIVES -->

      </div>
    </body>
</html>